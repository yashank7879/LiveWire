    <!-- Base application theme. -->

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CropperAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="SmallPopinsLightStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="mediumPopinsLightStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="largePopinsLightStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="SmallPopinsMediumStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="mediumPopinsMediumStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="largePopinsMediumStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="smallPopinsRegularStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="mediumPopinsRegularStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="largePopinsRegularStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="android:layout_marginLeft">@dimen/_15sdp</item>
        <item name="android:layout_marginRight">@dimen/_15sdp</item>-->
        <item name="tabTextAppearance">@style/mediumPopinsRegularStyle</item>
    </style>

    <style name="CheckboxStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorLightGray</item>  // for checked
        <item name="colorControlActivated">@color/colorGreen</item>  // for unchecked
    </style>

    <style name="pauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_12sdp</item>

    </style>
</resources>
