    <com.loopeer.shadow.ShadowView
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        app:shadowColor="@color/colorDarkGray"
        app:shadowMarginTop="3dp"
        app:shadowRadius="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/tabbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/my_job_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/iv_my_jobs"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/colorLightGray"
                    app:srcCompat="@drawable/ic_active_myjob" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ongoing_job_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/iv_ongoing"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@drawable/ic_onging_job" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/interest_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/home" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/iv_chat"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/colorLightGray"
                    app:srcCompat="@drawable/ic_active_chat" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_setting_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/colorLightGray"
                    app:srcCompat="@drawable/ic_user_setting" />


            </LinearLayout>

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

</RelativeLayout>
