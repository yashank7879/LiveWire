            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorLightGray" />

            <TextView
                style="@style/SmallPopinsLightStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/minimum_age_is_40_years"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/_8sdp" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/bg_pay_card_item"
                android:layout_marginTop="@dimen/_20sdp">

                <EditText
                    android:id="@+id/et_about_me"
                    style="@style/SmallPopinsLightStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/about_me"
                    android:maxHeight="@dimen/_120sdp"
                    android:padding="@dimen/_5sdp"
                    android:maxLength="200"
                    />
            </RelativeLayout>
            <TextView
                style="@style/SmallPopinsLightStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/maximum_200_words"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/_8sdp" />

            <Button
                android:id="@+id/btn_next"
                style="@style/mediumPopinsMediumStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_black_bg"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

