<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/forgot_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        >

        <TextView
            style="@style/mediumPopinsMediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:text="Forgot Password"
            android:textColor="@color/colorGreen" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGray" />

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_lock" />

        <TextView
            style="@style/smallPopinsRegularStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:ellipsize="marquee"
            android:text="We just need your registered email address to send you password" />

        <EditText
            android:id="@+id/et_email_dialog"
            style="@style/SmallPopinsLightStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@null"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@color/colorLightGray" />

        <Button
            android:id="@+id/btnSubmit"
            style="@style/mediumPopinsLightStyle"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_32sdp"
            android:text="Submit"
            android:textAllCaps="false"
            android:background="@drawable/button_green_bg"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/mediumPopinsLightStyle"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/colorGreen"
            android:layout_marginBottom="@dimen/_5sdp"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>