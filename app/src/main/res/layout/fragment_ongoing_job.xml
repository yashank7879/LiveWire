<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--<variable
            name=""
            type=""-->
    </data>

    <ScrollView
        android:id="@+id/sv_ongoing_job"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/select_skills_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_selected_skill"
                    style="@style/SmallPopinsLightStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_skill"
                    android:textColor="@color/colorDarkBlack"
                    android:textColorHint="@color/colorLightGray" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorLightGray" />

            <RelativeLayout
                android:id="@+id/job_start_date_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_start_date"
                    style="@style/SmallPopinsLightStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Select Start Date"
                    android:textColor="@color/colorDarkBlack"
                    android:textColorHint="@color/colorLightGray" />
                <!-- <Spinner
                     android:id="@+id/language_spinner"
                     android:layout_width="@dimen/_220sdp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:background="@color/colorBlackTransparent"
                     android:clickable="true"
                     android:dropDownVerticalOffset="@dimen/_30sdp"
                     android:dropDownWidth="@dimen/_240sdp"
                     android:focusable="true"
                     android:focusableInTouchMode="true"
                     android:fontFamily="@font/poppins_regular"
                     android:gravity="center"
                     android:spinnerMode="dropdown"
                     />-->

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorLightGray" />

            <RelativeLayout
                android:id="@+id/job_end_date_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black"
                    tools:ignore="VectorDrawableCompat" />
@string/select_job_end_date
                <TextView
                    android:id="@+id/tv_end_date"
                    style="@style/SmallPopinsLightStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Select End Date"
                    android:textColor="@color/colorDarkBlack"
                    android:textColorHint="@color/colorLightGray"

                    />
                <!-- <Spinner
                     android:id="@+id/language_spinner"
                     android:layout_width="@dimen/_220sdp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:background="@color/colorBlackTransparent"
                     android:clickable="true"
                     android:dropDownVerticalOffset="@dimen/_30sdp"
                     android:dropDownWidth="@dimen/_240sdp"
                     android:focusable="true"
                     android:focusableInTouchMode="true"
                     android:fontFamily="@font/poppins_regular"
                     android:gravity="center"
                     android:spinnerMode="dropdown"
                     />-->

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorLightGray" />

            <LinearLayout
                android:id="@+id/week_days_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_week_days"
                    style="@style/SmallPopinsLightStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/select_week_days"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/colorDarkBlack"
                    android:textColorHint="@color/colorLightGray" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_calender" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorLightGray" />


            <RelativeLayout
                android:id="@+id/et_hour_requierd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_subcategory_spin"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black" />


                <!--        <TextView
                        android:id="@+id/tv_hour_requierd"
                        style="@style/SmallPopinsLightStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hour_required_per_day"
                        android:singleLine="true"
                        android:textColor="@color/colorDarkBlack"
                        android:textColorHint="@color/colorLightGray" />-->

                <Spinner
                    android:id="@+id/hour_require_spinner"
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorExtraLightGray"
                    android:clickable="true"
                    android:dropDownVerticalOffset="@dimen/_10sdp"
                    android:dropDownWidth="@dimen/_240sdp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center|bottom"
                    android:spinnerMode="dropdown" />

            </RelativeLayout>

            <!-- <EditText
                 android:id="@+id/et_hour_requierd"
                 style="@style/SmallPopinsLightStyle"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/_5sdp"
                 android:layout_marginLeft="@dimen/_20sdp"
                 android:layout_marginRight="@dimen/_20sdp"
                 android:layout_marginTop="@dimen/_20sdp"
                 android:background="@null"
                 android:hint="@string/hour_required_per_day"
                 android:inputType="number"
                 android:singleLine="true"
                 android:textColor="@color/colorDarkBlack"
                 android:textColorHint="@color/colorLightGray" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorLightGray" />

            <RelativeLayout
                android:id="@+id/location_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_location_frm" />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/SmallPopinsLightStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="@string/location"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/colorDarkBlack"
                    android:textColorHint="@color/colorLightGray" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorLightGray" />

            <RelativeLayout
                android:id="@+id/description_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">


                <EditText
                    android:id="@+id/et_description"
                    style="@style/SmallPopinsLightStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/description"
                    android:imeOptions="actionDone"
                    android:maxLength="200"
                    android:textColor="@color/colorDarkBlack"
                    android:textColorHint="@color/colorLightGray" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@color/colorLightGray" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/button_green_bg"
                android:fontFamily="@font/poppins_light"
                android:text="@string/share_on_live_wire"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_green_bg"
                android:fontFamily="@font/poppins_light"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

    </ScrollView>
</layout>