<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    >

    <TextView
        android:id="@+id/tv_title"
        style="@style/mediumPopinsMediumStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorDarkBlack" />

    <RelativeLayout
        android:id="@+id/rl_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:background="@drawable/bg_pay_card_item"
        >

        <TextView
            android:id="@+id/tv_question"
            style="@style/SmallPopinsMediumStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkBlack"
            android:layout_marginEnd="@dimen/_20sdp"
            android:padding="@dimen/_5sdp"

            />

        <ImageView
            android:id="@+id/iv_collaps"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_add"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <RelativeLayout
            android:id="@+id/rl_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_question"
            android:visibility="visible"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorExtraLightGray"
                />

            <TextView
                android:id="@+id/tv_ans"
                style="@style/smallPopinsRegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkBlack"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>